extends baseEmail 

block content 
  p Hi #{firstName},
  p Forgot Password? Don't worry. Just submit your new password here: #{url}. 
  br 
  p You will be good to go in no time !!
  table.btn.btn-primary(role='presentation', border='0', cellpadding='0', cellspacing='0')
    tbody
      tr
        td(align='left')
          table(role='presentation', border='0', cellpadding='0', cellspacing='0')
            tbody
              tr
                td
                  a(href=`${url}`, target='_blank') Reset Password
  p If you didn't request a reset, please ignore this message.
